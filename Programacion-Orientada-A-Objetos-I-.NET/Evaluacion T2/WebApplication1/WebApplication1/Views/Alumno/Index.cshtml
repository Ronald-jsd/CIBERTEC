@model IEnumerable<WebApplication1.Models.Alumno>

@{
    ViewData["Title"] = "Index";
}

<h1>ALUMNOS</h1>

<div >
     <p>Crear nuevo alumno: </p>
    <a asp-action="Create" >Create New</a>
</div>


<h2>BUSQUEDA DE ALUMNOS</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        
            <label for="dato"><em>Buscar por DNI o Apellido</em></label>
            @Html.TextBox("dato")
     
        <button type="submit" class="btn btn-info">Buscar</button>
    }
</div>
<br />



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idAlumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoEstudiante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                Edad
                @*@Html.DisplayNameFor(model => model.FechaDeNacimiento)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idAlumno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEstudiante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
             </td>

            <td>
                @item.calcularEdad()
            </td>

           <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idAlumno }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idAlumno }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idAlumno }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
}
    </tbody>
</table>
