@model IEnumerable<WebApplication1.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h2>BUSQUEDA DE CLIENTES</h2>
<div>
    @using (Html.BeginForm())
    {
        <em>Nombre del usuario</em>
        @Html.TextBox("dato");
        <button>Buscar</button>
    }
</div>



<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {dni=item.DNI  }) |
                @Html.ActionLink("Details", "Details", new {dni=item.DNI }) |
                @Html.ActionLink("Delete", "Delete", new {dni=item.DNI }) 
            </td>
        </tr>
}
    </tbody>
</table>
